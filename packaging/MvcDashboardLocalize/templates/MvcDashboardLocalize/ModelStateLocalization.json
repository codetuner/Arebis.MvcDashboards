/**
 * This file describes ModelState error message patterns and how to localize them.
 * Every entry consists of a Pattern, a LocalizationKey and an optional ArgLocalization property.
 * The pattern is a regular expression to match error messages upon.
 * When a match is found, the LocalizationKey property indicates the localization key to use to
 * localize this error message.
 * If the pattern has groups, those match with positional arguments in the localization key. An
 * ArgLocalization array must then be provided with exact as many boolean values as there are
 * positional arguments in the LocalizationKey (or localized messages).
 * A true as boolean value in ArgLocalization means the corresponding argument value must itself
 * also be localized. A false meanse the argument value should not be localized.
 */
[
  {
    "Pattern": "^'(.*)' and '(.*)' do not match\\.$",
    "LocalizationKey": "'{0}' and '{1}' do not match.",
    "ArgLocalization": [ false, false ]
  },
  {
    "Pattern": "^The (.*) field is not a valid credit card number\\.$",
    "LocalizationKey": "The {0} field is not a valid credit card number.",
    "ArgLocalization": [ true ]
  },
  {
    "Pattern": "^(.*) is not valid\\.$",
    "LocalizationKey": "{0} is not valid.",
    "ArgLocalization": [ false ]
  },
  {
    "Pattern": "^The value '(.*)' is invalid\\.$",
    "LocalizationKey": "The value '{0}' is not valid.",
    "ArgLocalization": [ false ]
  },
  {
    "Pattern": "^The value '(.*)' is not valid for (.*)\\.$",
    "LocalizationKey": "The value '{0}' is not valid for {1}.",
    "ArgLocalization": [ false, true ]
  },
  {
    "Pattern": "^The (.*) field is not a valid e-mail address\\.$",
    "LocalizationKey": "The {0} field is not a valid e-mail address.",
    "ArgLocalization": [ true ]
  },
  {
    "Pattern": "^The (.*) field only accepts files with the following extensions: (.*)$",
    "LocalizationKey": "The {0} field only accepts files with the following extensions: {1}",
    "ArgLocalization": [ true, false ]
  },
  {
    "Pattern": "^The field (.*) must be a string or array type with a maximum length of '(.*)'\\.$",
    "LocalizationKey": "The field {0} must be a string or array type with a maximum length of '{1}'.",
    "ArgLocalization": [ true, false ]
  },
  {
    "Pattern": "^The field (.*) must be a string or array type with a minimum length of '(.*)'\\.$",
    "LocalizationKey": "The field {0} must be a string or array type with a minimum length of '{1}'.",
    "ArgLocalization": [ true, false ]
  },
  {
    "Pattern": "^The (.*) field is not a valid phone number\\.$",
    "LocalizationKey": "The {0} field is not a valid phone number.",
    "ArgLocalization": [ true ]
  },
  {
    "Pattern": "^The field (.*) must be between (.*) and (.*)\\.$",
    "LocalizationKey": "The field {0} must be between {1} and {2}.",
    "ArgLocalization": [ true, false, false ]
  },
  {
    "Pattern": "^The field (.*) must match the regular expression '(.*)'\\.$",
    "LocalizationKey": "The field {0} must match the regular expression '{1}'.",
    "ArgLocalization": [ true, false ]
  },
  {
    "Pattern": "^The (.*) field is required\\.$",
    "LocalizationKey": "The {0} field is required.",
    "ArgLocalization": [ true ]
  },
  {
    "Pattern": "^The field (.*) must be a string with a maximum length of (.*)\\.$",
    "LocalizationKey": "The field {0} must be a string with a maximum length of {1}.",
    "ArgLocalization": [ true, false ]
  },
  {
    "Pattern": "^The field (.*) must be a string with a minimum length of (.*) and a maximum length of (.*)\\.$",
    "LocalizationKey": "The field {0} must be a string with a minimum length of {1} and a maximum length of {2}.",
    "ArgLocalization": [ true, false, false ]
  },
  {
    "Pattern": "^The (.*) field is not a valid fully-qualified http, https, or ftp URL\\.$",
    "LocalizationKey": "The {0} field is not a valid fully-qualified http, https, or ftp URL.",
    "ArgLocalization": [ true ]
  },
  {
    "Pattern": "^The field (.*) is invalid\\.$",
    "LocalizationKey": "The field {0} is invalid.",
    "ArgLocalization": [ true ]
  }
]